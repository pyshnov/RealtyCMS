<div class="navbar">
    <div class="navbar-inner">
        <div class="left">
            <a href="#" class="link icon-only open-panel"><i class="icon mobile-menu"></i></a>
        </div>
        <!-- We need cool sliding animation on title element, so we have additional "sliding" class -->
        <div class="center sliding">NET-AGENTA.net</div>
        <div class="right">
            <a href="/" class="link icon-only external"><i class="f7-icons">search</i></a>
        </div>
    </div>
</div>

<div class="pages navbar-through toolbar-through">
    <div data-page="blog" class="page no-toolbar">
        <!-- Scrollable page content -->
        <div class="page-content hide-bars-on-scroll">
            <div class="content-block">
                {% if page.rows %}
                    {% for row in page.rows %}
                        <a href="{{ row.url }}">
                            <div class="blog-preview-block">
                                <div class="blog-preview-img">
                                    {% if row.image %}
                                        <img src="/uploads/blog/{{ row.image }}" alt="">
                                    {% endif %}
                                </div>
                                <div class="blog-preview-content">
                                    <p class="title">{{ row.name }}</p>
                                    <p>{{ row.anons }}</p>
                                    <div class="blog-preview-bottom">
                                        <span class="pull-left"><i class="fa fa-eye fa-fw" aria-hidden="true"></i>{{ row.views }}</span>
                                        <span class="pull-right">{{ row.date|date_format }}</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    {% endfor %}
                {% else %}
                    <p>Список статей пуст.</p>
                {% endif %}
            </div>
            {% include 'footer.html.twig' %}
        </div>
    </div>
</div>
