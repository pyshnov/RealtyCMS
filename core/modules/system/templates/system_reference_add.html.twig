<div class="content-header">
    <div class="col-lg-12">
        <h2>{{ 'system.handbook'|t }}</h2>
        {{ breadcrumb }}
    </div>
</div>
<div class="content-body">
    <div class="content-body__header">
        <h1 class="title">Новый элемент / {{ page.info.name[0] }}</h1>
    </div>
    <div class="content-body__body">
        {% if error %}
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {% for item in error %}
                    {{ item }} <br>
                {% endfor %}
            </div>
        {% endif %}
        <form id="referenceAdd" class="form-horizontal" method="post">
            {% if page.dependence %}
                <div class="form-group">
                    <label class="col-md-2 control-label">{{ page.dependence_name }}</label>
                    <div class="col-md-4 col-lg-3">
                        {{ page.dependence }}
                    </div>
                </div>
            {% endif %}
            <div class="form-group">
                <label class="col-md-2 control-label">Название<span style="color: red;">*</span></label>
                <div class="col-md-4 col-lg-3">
                    <input type="text" name="name" value="{{ request.name }}" class="form-control" required>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Алиас</label>
                <div class="col-md-4 col-lg-3">
                    <input type="text" name="aliases" value="{{ request.aliases }}" class="form-control">
                </div>
            </div>
            {% if page.type == 'city' %}
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-4 col-lg-3">
                        <div class="divider horizontal">Падежи</div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Родительный</label>
                    <div class="col-md-4 col-lg-3">
                        <input type="text" name="genitive" value="{{ request.genitive }}" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Дательный</label>
                    <div class="col-md-4 col-lg-3">
                        <input type="text" name="dative" value="{{ request.dative }}" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Винительный</label>
                    <div class="col-md-4 col-lg-3">
                        <input type="text" name="accusative" value="{{ request.accusative }}" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Творительный</label>
                    <div class="col-md-4 col-lg-3">
                        <input type="text" name="ablative" value="{{ request.ablative }}" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Предложный</label>
                    <div class="col-md-4 col-lg-3">
                        <input type="text" name="prepositional" value="{{ request.prepositional }}" class="form-control">
                    </div>
                </div>
            {% endif %}
            <div class="form-group">
                <div class="col-md-offset-2 col-md-4 col-lg-3">
                    <button class="btn btn-green" type="sumbit">Отправить</button>
                </div>
            </div>
            <input type="hidden" name="do" value="add">
        </form>
    </div>
</div>