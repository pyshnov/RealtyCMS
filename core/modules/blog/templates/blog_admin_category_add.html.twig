<div class="content-header">
    <div class="col-lg-9 col-md-8 col-sm-7">
        <h2>{{ 'blog.name'|t }}</h2>
        {{ breadcrumb }}
    </div>
    <div class="col-lg-3 col-md-4 col-sm-5">
        <div class="right-btn text-right">
            <a href="/admin/blog/article_add/" class="btn btn-green">
                Добавить статью
            </a>
        </div>
    </div>
</div>
<div class="content-body">
    <div class="content-body__header">
        <h1 class="title">{{ 'blog.category_add'|t }}</h1>
    </div>
    <div class="content-body__body">
        {% if error %}
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {% for item in error %}
                    {{ item }} <br>
                {% endfor %}
            </div>
        {% endif %}
        <form id="categoryAdd" class="form-horizontal" method="post">
            <div class="form-group">
                <label class="col-md-2 control-label">Заголовок<span style="color: red;">*</span></label>
                <div class="col-md-4 col-lg-3">
                    <input type="text" name="name" value="{{ request.name ? request.name : '' }}" class="form-control" required>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Алиас</label>
                <div class="col-md-4 col-lg-3">
                    <input type="text" name="alias" value="{{ request.alias ? request.alias : '' }}" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Мета заголовок</label>
                <div class="col-md-4 col-lg-3">
                    <input type="text" name="meta_title" value="{{ request.meta_title ? request.meta_title : '' }}" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Meta keywords</label>
                <div class="col-md-4 col-lg-3">
                    <input type="text" name="keywords" value="{{ request.keywords ? request.keywords : '' }}" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Мeta description</label>
                <div class="col-md-4 col-lg-3">
                    <input type="text" name="description" value="{{ request.description ? request.description : article.description }}" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-6">
                    <div class="divider"></div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-4 col-lg-3">
                    <button class="btn btn-green" type="sumbit">Отправить</button>
                </div>
            </div>
            <input type="hidden" name="do" value="add">
        </form>
    </div>
</div>
